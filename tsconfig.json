{
  "compileOnSave": false,
  "exclude": [
    "dist",
    "node_modules",
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "src",
    "sourceMap": false,
    "noImplicitAny": false,
    "declaration": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2018",
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  }
}